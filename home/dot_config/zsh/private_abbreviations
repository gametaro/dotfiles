# nvim
abbr -S v="nvim"

# chezmoi
abbr -S ch="chezmoi"
abbr -S cha="chezmoi apply"
abbr -S chs="chezmoi status"
abbr -S che="chezmoi execute-template"
abbr -S chd="chezmoi data"
abbr -S chc="chezmoi cd"
abbr -S chu="chezmoi update"

# npm
abbr -S np="npm"
abbr -S np="npm start"
abbr -S npi="npm i"
abbr -S npd="npm i -D"
abbr -S npg="npm i -g"
abbr -S npc="npm ci"

# git
abbr -S g="git"
abbr -S ga="git add"
abbr -S gaa="git add --all"
abbr -S gap="git add --patch"
abbr -S gassume="git update-index --assume-unchanged"
abbr -S gau="git add --update"
abbr -S gb="git branch"
abbr -S gbed="git branch --edit-description"
abbr -S gbm="git branch --merged"
abbr -S gbnm="git branch --no-merged"
abbr -S gbranches="git branch -a"
abbr -S gbv="git branch --verbose"
abbr -S gbvv="git branch --verbose --verbose"
abbr -S gc="git commit"
abbr -S gca="git commit --amend"
abbr -S gcam="git commit --amend --message"
abbr -S gcane="git commit --amend --no-edit"
abbr -S gci="git commit --interactive"
abbr -S gcleaner="git clean -dff"
abbr -S gcleanest="git clean -dffx"
abbr -S gclone-lean="git clone --depth 1 --filter=combine:blob:none+tree:0 --no-checkout"
abbr -S gcloner="git clone --recursive"
abbr -S gcm="git commit --message"
abbr -S gco="git checkout"
abbr -S gcong="git checkout --no-guess"
abbr -S gcp="git cherry-pick"
abbr -S gcpa="git cherry-pick --abort"
