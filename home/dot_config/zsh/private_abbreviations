abbr -S gcpn="git cherry-pick -n"
abbr -S gcpnx="git cherry-pick -n -x"
abbr -S gcurrent-branch="git rev-parse --abbrev-ref HEAD"
abbr -S gcvs-e="git cvsexportcommit -u -p"
abbr -S gcvs-i="git cvsimport -k -a"
abbr -S gd="git diff"
abbr -S gdc="git diff --cached"
abbr -S gdd="git diff-deep"
abbr -S gdefault-branch="git config init.defaultBranch"
abbr -S gdiff-changes="git diff --name-status -r"
abbr -S gdiff-deep="git diff --check --dirstat --find-copies --find-renames --histogram --color"
abbr -S gdiff-staged="git diff --cached"
abbr -S gdiff-stat="git diff --stat --ignore-space-change -r"
abbr -S gdiscard="git checkout --"
abbr -S gds="git diff --staged"
abbr -S gdw="git diff --word-diff"
abbr -S gf="git fetch"
abbr -S gfa="git fetch --all"
abbr -S gfav="git fetch --all --verbose"
abbr -S gg="git grep"
abbr -S ggg="git grep-group"
abbr -S ggn="git grep -n"
abbr -S ggrep-ack="git -c color.grep.linenumber=\"bold yellow\"     -c color.grep.filename=\"bold green\"     -c color.grep.match=\"reverse yellow\"     grep --break --heading --line-number"
abbr -S ggrep-group="git grep --break --heading --line-number --color"
abbr -S giniter="git init-empty"
abbr -S gl="git log"
abbr -S glast-tag="git describe --tags --abbrev=0"
abbr -S glfp="git log --first-parent"
abbr -S glg="git log --graph"
abbr -S gll="git log-list"
abbr -S glll="git log-list-long"
abbr -S glo="git log --oneline"
abbr -S glog-1-day="git log --since=1-day-ago"
abbr -S glog-1-hour="git log --since=1-hour-ago"
abbr -S glog-1-month="git log --since=1-month-ago"
abbr -S glog-1-week="git log --since=1-week-ago"
abbr -S glog-1-year="git log --since=1-year-ago"
abbr -S glog-date-last="git log -1 --date-order --format=%cI"
abbr -S glog-fetched="git log --oneline HEAD..origin/main"
abbr -S glog-fresh="git log ORIG_HEAD.. --stat --no-merges"
abbr -S glog-graph="git log --graph --all --oneline --decorate"
abbr -S glog-list-long="git log --graph --topo-order --date=iso8601-strict --no-abbrev-commit --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn <%ce>]%Creset %Cblue%G?%Creset'"
abbr -S glog-list="git log --graph --topo-order --date=short --abbrev-commit --decorate --all --boundary --pretty=format:'%Cgreen%ad %Cred%h%Creset -%C(yellow)%d%Creset %s %Cblue[%cn]%Creset %Cblue%G?%Creset'"
abbr -S glog-local="git log --oneline origin..HEAD"
abbr -S glog-refs="git log --all --graph --decorate --oneline --simplify-by-decoration --no-merges"
abbr -S glog-timeline="git log --format='%h %an %ar - %s'"
abbr -S glor="git log --oneline --reverse"
abbr -S glp="git log --patch"
abbr -S gls="git ls-files"
