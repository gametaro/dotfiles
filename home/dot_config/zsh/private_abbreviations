abbr -S grefs-by-date="git for-each-ref --sort=-committerdate --format='%(committerdate:short) %(refname:short) (objectname:short) %(contents:subject)'"
abbr -S grepacker="git repack -a -d -f --depth=300 --window=300 --window-memory=1g"
abbr -S greset-commit-hard="git reset --hard HEAD~1"
abbr -S greset-commit="git reset --soft HEAD~1"
