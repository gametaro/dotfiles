[user]
  name = {{ .name }}
  email = {{ .email }}
[init]
  defaultBranch = main
[include]
  path = ~/.config/git/alias
[branch]
  autoSetupRebase = always
[core]
  editor = nvim
  pager = delta
[color]
  branch = auto
  diff = auto
  interactive = auto
  status = auto
  ui = auto
[fetch]
  prune = true
  writeCommitGraph = true
[pull]
  rebase = true
[push]
  default = current
  followTags = true
[rebase]
  autoStash = true
[rerere]
  enabled = true
[status]
  showUntrackedFiles = all
[interactive]
  diffFilter = delta --color-only
[delta]
  navigate = true
[merge]
  tool = nvimdiff
  conflictstyle = zdiff3
[mergetool]
  keepBackup = false
[mergetool "nvimdiff"]
  cmd = nvim -d $LOCAL $REMOTE $MERGED -c '$wincmd w' -c 'wincmd J'
[diff]
  colorMoved = default
{{/* vim: set filetype=gitconfig: */}}
