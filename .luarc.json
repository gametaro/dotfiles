{
  "$schema": "https://raw.githubusercontent.com/sumneko/vscode-lua/master/setting/schema.json",
  "diagnostics": {
    "disable": [
      "duplicate-set-field",
      "param-type-mismatch"
    ]
  },
  "format": {
    "enable": false
  },
  "completion": {
    "callSnippet": "Replace"
  },
  "hint": {
    "enable": true
  },
  "runtime": {
    "version": "LuaJIT"
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "${3rd}/luv/library",
      "${3rd}/busted/library"
    ],
    "checkThirdParty": false
  }
}
