{{- if (eq .chezmoi.os "linux") -}}
#!/usr/bin/env bash

set -Eeuo pipefail

install_asdf() {
  if [[ ! -e $HOME/.asdf ]]; then
    git clone https://github.com/asdf-vm/asdf.git "$HOME/.asdf" --branch v0.8.1
  fi
}

main() {
  install_asdf
}

main "$@"
{{- end -}}

{{- if (eq .chezmoi.os "darwin") -}}
#!/usr/bin/env bash

set -Eeuo pipefail

brew install asdf
{{- end -}}
